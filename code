#include <iostream> 
using namespace std; 
 
// Function to read data into a 2D array 
void read_data(int arr[3][4], int r, int c) { 
    cout << "Enter the data: " << endl; 
    for (int i = 0; i < r; i++) { 
        cout << "For City " << i + 1 << endl; 
        for (int j = 0; j < c; j++) { 
            cout << "Month " << j + 1 << ": "; 
            cin >> arr[i][j]; 
        } 
        cout << endl; 
    } 
} 
 
// Function to display the 2D array in tabular format 
void display_data(int arr[3][4], int r, int c) { 
    cout << "Rainfall Data:" << endl; 
    cout << "City\\Month\t"; 
    for (int j = 0; j < c; j++) { 
        cout << "M" << j + 1 << "\t"; 
    } 
    cout << endl; 
    for (int i = 0; i < r; i++) { 
        cout << "City " << i + 1 << "\t"; 
        for (int j = 0; j < c; j++) { 
            cout << arr[i][j] << "\t"; 
        } 
        cout << endl; 
    } 
} 
 
// Function to calculate and display the average rainfall for each city 
void avg_city(int arr[3][4], int r, int c) { 
    for (int i = 0; i < r; i++) { 
        int sum = 0; 
        for (int j = 0; j < c; j++) { 
            sum += arr[i][j]; 
        } 
        int avg = sum / c; 
        cout << "For City " << i + 1 << ", average is: " << avg << endl; 
} 
} 
int main() { 
int arr[3][4]; // 3 cities and 4 months 
read_data(arr, 3, 4);       
// Get user input 
display_data(arr, 3, 4);    // Show the data 
avg_city(arr, 3, 4);        
// Show average per city 
return 0; 
}
